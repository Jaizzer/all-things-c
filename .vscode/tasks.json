{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Jaizzer's C/C++ Debug Task",
			"type": "shell",
			"command": "clang",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		}
	]
}
